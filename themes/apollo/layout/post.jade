extends partial/layout

block site_title
    != page.title + " Â· " + config.title

block description
    - var desc = page.description || page.title + ' - ' + config.author;
    meta(name="description", content=desc)

block keywords
    - var keyw = page.keywords || page.title + ' - ' + config.author;
    meta(name="keywords", content=keyw)

block container
    include mixins/post
    +post(page)

block pagination
    include mixins/paginator
    +post()
    include partial/comment

block copyright
    include partial/copyright